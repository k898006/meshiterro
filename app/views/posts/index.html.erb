<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>
        Photo
      </th>
      <th>
        Shop Name
      </th>
      <th>
        Detail
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.get_image(50, 50) %></td>
        <td><%= post.shop_name %></td>
        <td><%= post.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>
